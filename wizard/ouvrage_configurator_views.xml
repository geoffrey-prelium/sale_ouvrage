<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_ouvrage_configurator_form" model="ir.ui.view">
        <field name="name">sale.ouvrage.configurator.form</field>
        <field name="model">sale.ouvrage.configurator</field>
        <field name="arch" type="xml">
            <form string="Configuration de l'Ouvrage">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="bom_id"/>
                        </group>
                        <group>
                            <field name="hide_prices"/>
                            <field name="hide_structure"/>
                        </group>
                         <button name="action_initialize" type="object" string="Initialiser" class="btn-secondary"/>
                    </group>
                    <group string="Ouvrage Principal">
                        <field name="qty"/>
                    </group>
                    <notebook>
                        <page string="Composants">
                            <field name="component_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="cost"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Valider" type="object" name="action_save" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
