<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_ouvrage" model="ir.ui.view">
        <field name="name">product.template.form.ouvrage</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="is_ouvrage"/>
                    <label for="is_ouvrage"/>
                </span>
            </xpath>
            <xpath expr="//label[@for='list_price']" position="attributes">
                <attribute name="invisible">is_ouvrage == True</attribute>
            </xpath>
            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="invisible">is_ouvrage == True</attribute>
            </xpath>
             <!-- Ensure UoM is visible even if pricing is hidden. 
                  In standard Odoo, uom_id might be inside a group or div that we shouldn't hide.
                  Here I ensure list_price is hidden specifically. -->
        </field>
    </record>

    <record id="product_template_search_view_ouvrage" model="ir.ui.view">
        <field name="name">product.template.search.ouvrage</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='filter_to_sell']" position="after">
                <filter string="Ouvrages" name="filter_ouvrage" domain="[('is_ouvrage', '=', True)]"/>
            </xpath>
        </field>
    </record>
</odoo>
